@model IEnumerable<Entidades.recIngredientes_Result>

@{
    ViewBag.Title = "listarIngredientes_PA";
}
<h1>Ingredientes</h1>
<br />
<p>
    @Html.ActionLink("Nuevo", "agregarIngrediente_PA")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Ingrediente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Ingrediente)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Ingrediente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Ingrediente)
            </td>
            <td>
                @Html.ActionLink("Editar", "modificarIngredientes_PA", new { pId = item.Id_Ingrediente }) |
                @Html.ActionLink("Detalle", "detalleIngrediente_PA", new { pId = item.Id_Ingrediente }) |
                @Html.ActionLink("Eliminar", "eliminarIngredientes_PA", new { pId = item.Id_Ingrediente })
            </td>
        </tr>
    }

</table>
