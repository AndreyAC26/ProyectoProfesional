@model MVCMuncheese.Models.modeloIngredientes

@{
    ViewBag.Title = "modificarIngredientes_PA";
}

<h2>Editar</h2>


@using (Html.BeginForm("accionesPA", "Ingredientes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ingredientes</h4>
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Id_Ingrediente, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id_Ingrediente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Id_Ingrediente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre_Ingrediente, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre_Ingrediente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_Ingrediente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" name="enviarAccion" value="Modificar"
                        class="btn btn-primary" title="Modificar registro"
                        data-toggle="tooltip" data-container="body" data-placement="right">
                    Modificar
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "listarIngredientes_PA")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
