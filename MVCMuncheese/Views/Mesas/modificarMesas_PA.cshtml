@model MVCMuncheese.Models.modeloMesas

@{
    ViewBag.Title = "modificarMesas_PA";
}

<h2>Editar</h2>
<br />

@using (Html.BeginForm("accionesPA", "Mesas", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Mesa</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Id_Mesa, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Id_Mesa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Id_Mesa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NombreMesa, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NombreMesa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombreMesa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Estado, (SelectList)ViewBag.Estados, "-- Seleccione un Estado --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" name="enviarAccion" value="Modificar"
                    class="btn btn-primary" title="Modificar registro"
                    data-toggle="tooltip" data-container="body" data-placement="right">
                Modificar
            </button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Atras", "listarMesas_PA")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
