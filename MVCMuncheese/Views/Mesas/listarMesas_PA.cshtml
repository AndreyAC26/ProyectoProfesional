@model IEnumerable<Entidades.recMesas_Result>

@{
    ViewBag.Title = "listarMesas_PA";
}

<h2>Mesas</h2>

<p>
    @Html.ActionLink("Nuevo", "agregarMesas_PA")
</p>
<br />
<p>
    @Html.ActionLink("Mesas", "Mesas")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Id_Mesa)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NombreMesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Id_Mesa)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.NombreMesa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "modificarMesas_PA", new { pId=item.Id_Mesa }) |
            @Html.ActionLink("Detalle", "detalleMesas_PA", new { pId = item.Id_Mesa }) |
            @Html.ActionLink("Borrar", "eliminarMesas_PA", new { pId = item.Id_Mesa })
        </td>
    </tr>
}

</table>
