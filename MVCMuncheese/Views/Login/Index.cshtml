@model MVCMuncheese.Models.modeloLogin

@{
    ViewBag.Title = "Ingreso al sistema";
}
<div style="text-align: center">
    <h2 style="text-align:center">Ingreso al sistema</h2>

    <div class="col-sm-12">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">

            @using (Html.BeginForm("validaAccesoUsuario", "Login", FormMethod.Post, new { @id = "frmLogin" }))
            {


                <div class="login-form" style="padding: 10px">
                    <div class="form-group">
                        <div class="row">
                            @Html.Label("", new { @class = "label" })
                        </div>
                        <div class="row" style="padding:0px 15px 0px 15px">
                            @Html.TextBoxFor(w => w.Usuario, new { @placeholder = "Usuario", @id = "txtUsuario", @type = "text", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            @Html.Label("", new { @class = "label" })
                        </div>
                        <div class="row" style="padding:0px 15px 0px 15px">
                            @Html.TextBoxFor(w => w.Contraseña, new { @placeholder = "Contraseña", @id = "txtContrasena", @type = "password", @class = "form-control" })
                        </div>
                    </div>
                    <div>
                        <input type="submit" value="Ingresar" class="btn btn-primary btn-lg btn-block" id="btnIngresar" />
                    </div>
                </div>

            }
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
