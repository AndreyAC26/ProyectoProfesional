                        @Html.EditorFor(model => model.Tel_Cliente, new { htmlAttributes = new { @class = "form-control form-control-lg", style = "height: 30px;" } })
                        @Html.ValidationMessageFor(model => model.Tel_Cliente, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
