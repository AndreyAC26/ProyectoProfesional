@model MVCMuncheese.Models.modeloProductos

@{
    ViewBag.Title = "modificarProductos_ENT";
}

<h2>Editar</h2>
<br />

@using (Html.BeginForm("accionesEntidades", "Productos", FormMethod.Post))
{
